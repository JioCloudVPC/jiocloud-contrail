#
# Note: zk_server_ip is a comma seperated list of all zk server IPs on other
# configuration files, but here it sees only local server IP it put. Need to
# check this.
# zk_server_ip=<%= @zk_ip_list.map{ |ip| "#{ip}:#{@zk_port}" }.join(',') %>
#

zk_server_ip=<%= @zk_ip_list.map{ |ip| "#{ip}:#{@zk_port}" }.join(',') %>
listen_ip_addr=<%= @discovery_listen %>
listen_port=<%= @discovery_local_listen_port %>
log_local=<%= @log_local %>
log_file=/var/log/contrail/contrail-discovery.log
log_file_size=<%= @log_file_size %>
log_level=<%= @log_level %>
cassandra_server_list=<%= @cassandra_ip_list.map{ |ip| "#{ip}:#{@cassandra_port}" }.join(' ') %>

# minimim time to allow client to cache service information (seconds)
ttl_min=300

# maximum time to allow client to cache service information (seconds)
ttl_max=1800

# health check ping interval <=0 for disabling
hc_interval=<%= @hc_interval %>

# maximum hearbeats to miss before server will declare publisher out of
# service.
hc_max_miss=3

# use short TTL for agressive rescheduling if all services are not up
ttl_short=1

