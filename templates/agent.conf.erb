<?xml version="1.0"?>
<config>
  <agent>
    <vhost>
      <name>vhost0</name>
      <ip-address><%= @vrouter_ip%>/<%= @vrouter_cidr %></ip-address>
      <gateway><%= @vrouter_gw_orig %></gateway>
    </vhost>
    <eth-port>
      <name><%= @vrouter_physical_interface_orig %></name>
    </eth-port>
    <metadata-proxy>
      <shared-secret><%= @metadata_proxy_secret %></shared-secret>
    </metadata-proxy>
    <discovery-server>
      <ip-address><%= @discovery_ip %></ip-address>
      <control-instances><%= @vrouter_num_controllers %></control-instances>
    </discovery-server>
  </agent>
</config>
